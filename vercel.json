{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/vite"
        },
        {
            "src": "backend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/pages/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}